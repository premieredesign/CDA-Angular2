app-layout
.overlay-bk

.promo-4

.main.container
    .row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Sign Up

            // Register Form
            form(method='POST' action='/register')
                div.form-group
                    label(for='name') Name:
                    input#name.form-control(type='text', placeholder='Full Name' name='name')
                div.form-group
                    label(for='email') Email:
                    input#email.form-control(type='email', placeholder='Name@email.com', name='email')
                div.form-group
                    label(for='favoriteApparel') Favorite Apparel:
                    input#favoriteApparel.form-control(type='text', placeholder='Tell us what caught your eye and add the stock order #', name='favoriteApparel')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password', placeholder='Password', name='password')
                div.form-group
                    label(for='pw2') Confirm Password:
                    input#pw2.form-control(type='password', placeholder='Confirm Password', name='confirmPassword')
                button.btn.btn-primary(type='submit') Sign Up